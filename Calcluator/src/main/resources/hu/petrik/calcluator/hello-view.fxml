<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import com.sun.javafx.scene.control.DoubleField?>
<?import com.sun.javafx.scene.control.IntegerField?>
<?import javafx.scene.text.Font?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="hu.petrik.calcluator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

        <HBox prefHeight="100.0" prefWidth="200.0" spacing="50">
            <TextField fx:id="input1"/>
            <TextField fx:id="input2"/>
        </HBox>

        <HBox prefHeight="100.0" prefWidth="200.0" spacing="10">
            <Button mnemonicParsing="false" text="+" minHeight="50" minWidth="50" maxHeight="50" maxWidth="50" onAction="#click"/>
            <Button mnemonicParsing="false" text="-" minHeight="50" minWidth="50" maxHeight="50" maxWidth="50" onAction="#click"/>
            <Button mnemonicParsing="false" text="*" minHeight="50" minWidth="50" maxHeight="50" maxWidth="50" onAction="#click"/>
            <Button mnemonicParsing="false" text="/" minHeight="50" minWidth="50" maxHeight="50" maxWidth="50" onAction="#click"/>
            <Button mnemonicParsing="false" text="\%" minHeight="50" minWidth="50" maxHeight="50" maxWidth="50" onAction="#click"/>
        </HBox>

    <Text fx:id="output">
        <font>
            <Font size="20"/>
        </font>
    </Text>

</VBox>
